body
	top 0
	margin 0
	font-family: 'Ropa Sans', sans-serif;

header
	border 2px dashed steelblue
	padding 13px 0
	position relative

.header_contenedor
	width 100%
	// centrado

	padding-right 30px
	// Flex al padre para colocar en una misma linea la imagen y el bloque de  items
	display flex
	// Centrar los hijos
	align-items center
	justify-content space-between

.imagen-header
	box-sizing border-box
	margin 0
	margin-left 250px

.item-menu-header
	display inline-block
	margin-right 25px
	font-weight 400
	font-family: 'Ropa Sans', sans-serif;
.icon-mundo
	font-family "Roboto";
	
.menu-wrapper
	margin-left: 30px
	

.buscador
	margin-left 30px
	border 1px solid #ccc
	background #eaeaea
	font-family "Roboto";
	font-size 17px
	border-radius:5px;
	background:transparent;
	box-shadow: 1px 1px #fefefe, inset 1px 1px 
	height: 20px
	padding 10px
	

// bloque 2 - Mas Buscados
.mas_buscados
	padding 1em 0

.mas_buscados__bloque
	display flex
	flex-direction column
	align-items center
.container
	max-width 1000px
	height 300px
	padding 0 1em
	margin 0 auto
	border 2px dashed steelblue
	position relative
		
.titulo_home
	text-align center
	display: block;
	font-size: 1.5em;
	-webkit-margin-before: 0.83em;
	-webkit-margin-after: 0.83em;
	-webkit-margin-start: 0px;
	-webkit-margin-end: 0px;
	font-weight: bold;
	font-size 28px
	font-family: 'Ropa Sans', sans-serif;
	
.titulo_header
	display inline-block
	font-family "Ropa Sans", sans-serif
	
.items_productos

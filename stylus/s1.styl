	align-items center
	padding-right 10px
.titulo_producto
	color: #0099FF;
	padding-top 5px

.button
	margin 10px
	padding 12px 12px
	border 0 none
	border-radius 4px

.button.-green 
	color #FFFFFF
	background #3dd28d


